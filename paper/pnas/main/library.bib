issn = {0022-4928},
journal = {J. Atmos. Sci.},
keywords = {RCE,TC,genesis},
month = {mar},
number = {3},
pages = {1058--1069},
title = {{Parameter Study of Tropical Cyclones in Rotating Radiative–Convective Equilibrium with Column Physics and Resolution of a 25-km GCM}},
url = {http://journals.ametsoc.org/doi/abs/10.1175/JAS-D-13-0190.1},
