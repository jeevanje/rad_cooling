file = {:Users/nadir/Library/Application Support/Mendeley Desktop/Downloaded/Bretherton, Blossey, Peters - 2006 - Interpretation of simple and cloud-resolving simulations of moist convection-radiation interaction.pdf:pdf},
issn = {09354964},
