file = {:Users/nadir/Library/Application Support/Mendeley Desktop/Downloaded/Zhang, McFarlane - 1995 - Sensitivity of climate simulations to the parameterization of cumulus convection in the Canadian climate centr.pdf:pdf},
isbn = {0705-5900 1480-9214},
