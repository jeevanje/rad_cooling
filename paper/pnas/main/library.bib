file = {:Users/nadir/Library/Application Support/Mendeley Desktop/Downloaded/Webb, Lambert, Gregory - 2013 - Origins of differences in climate sensitivity, forcing and feedback in climate models.pdf:pdf},
isbn = {0930-7575},
